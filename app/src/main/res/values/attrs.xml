<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HoneycombButton">
        <attr name="honeycombButtonIcon" format="integer" />
        <attr name="honeycombButtonIconOculus3dof" format="integer" />
        <attr name="honeycombButtonIconOculus6dof" format="integer" />
        <attr name="honeycombButtonText" format="string" />
        <attr name="honeycombButtonTextSize" format="dimension" />
        <attr name="honeycombSecondaryText" format="string" />
        <attr name="honeycombButtonIconHover" format="boolean" />
    </declare-styleable>

    <declare-styleable name="HoneycombSwitch">
        <attr name="honeycombSwitchText" format="string" />
        <attr name="honeycombSwitchTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="UIButton">
        <attr name="tintColorList" format="reference|color" />
        <attr name="privateModeTintColorList" format="reference|color" />
        <attr name="activeModeTintColorList" format="reference|color" />
        <attr name="notificationModeTintColorList" format="reference|color" />
        <attr name="privateModeBackground" format="integer" />
        <attr name="activeModeBackground" format="integer" />
        <attr name="tooltipDelay" />
        <attr name="tooltipPosition" />
        <attr name="tooltipDensity" />
        <attr name="tooltipLayout" />
    </declare-styleable>

    <attr name="buttonText" format="string" />
    <attr name="title" format="string" />
    <attr name="description" format="string" />
    <attr name="tooltipDelay" format="integer" />
    <attr name="tooltipPosition" format="enum">
        <enum name="top" value="0"/>
        <enum name="bottom" value="1"/>
    </attr>
    <attr name="tooltipDensity" format="dimension" />
    <attr name="tooltipLayout" format="reference" />

    <declare-styleable name="SwitchSetting">
        <attr name="description" />
        <attr name="on_text" format="string" />
        <attr name="off_text" format="string" />
        <attr name="layout_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RadioGroupSetting">
        <attr name="description" />
        <attr name="itemMargin" />
        <attr name="options" format="reference" />
        <attr name="values" format="reference" />
        <attr name="images" format="reference" />
        <attr name="layout" format="reference" />
    </declare-styleable>

    <declare-styleable name="EditSetting">
        <attr name="description" />
        <attr name="by" />
        <attr name="highlightedTextColor" />
        <attr name="android:width" />
        <attr name="android:maxLength" />
        <attr name="android:inputType" />
    </declare-styleable>

    <declare-styleable name="ButtonSetting">
        <attr name="description" />
        <attr name="buttonText" />
    </declare-styleable>

    <declare-styleable name="SettingsHeader">
        <attr name="title" />
        <attr name="description" />
        <attr name="helpVisibility" format="enum" >
            <enum name="visible" value="0"/>
            <enum name="gone" value="8"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SettingsFooter">
        <attr name="buttonText" />
        <attr name="description" />
    </declare-styleable>

    <declare-styleable name="CustomRecyclerView">
        <attr name="android:fastScrollAlwaysVisible" />
        <attr name="customFastScrollEnabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomScrollView">
        <attr name="android:fastScrollThumbDrawable" />
        <attr name="android:scrollbarSize" />
        <attr name="android:fastScrollAlwaysVisible" />
        <attr name="dynamicHeight" format="boolean"/>
    </declare-styleable>
</resources>
