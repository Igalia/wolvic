<resources>
    <!-- Theme attributes -->
    <declare-styleable name="AppTheme">
        <attr name="headerButtonStyle" format="reference" />
        <attr name="tabButtonStyle" format="reference" />
        <attr name="dialogButtonStyle" format="reference" />
        <attr name="settingsButtonStyle" format="reference" />
        <attr name="tabStyle" format="reference" />
        <attr name="navigationBarStyle" format="reference" />
        <attr name="navigationBarButtonStyle" format="reference" />
        <attr name="urlBarIconStyle" format="reference" />
        <attr name="navigationBarButtonTint" format="reference" />
        <attr name="urlProtocolColor" format="color" />
        <attr name="urlWebsiteColor" format="color" />
    </declare-styleable>

    <!-- Button attributes -->
    <declare-styleable name="NavigationBarButton">
        <attr name="tintColorList" format="reference|color" />
    </declare-styleable>

    <style name="navigationBarTheme">
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="navigationBarButtonTheme">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tintColorList">@drawable/main_button_icon_color</item>
    </style>

    <style name="settingsButtonTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">121dp</item>
        <item name="android:layout_height">136dp</item>
        <item name="android:background">@drawable/ic_menu_settings_honeycomb_fill</item>
        <item name="android:foreground">@drawable/ic_menu_settings_honeycomb_outline_1pt</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@drawable/settings_button_color</item>
    </style>

    <style name="headerButtonTheme" parent="navigationBarButtonTheme">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginLeft">@dimen/header_button_margin</item>
        <item name="tintColorList">@drawable/header_button_color</item>
    </style>

    <style name="tabButtonTheme" parent="navigationBarButtonTheme">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="tintColorList">@drawable/tab_button_color</item>
    </style>

    <style name="dialogButtonTheme">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tintColorList">@drawable/navigation_button_color</item>
    </style>

    <style name="tabTheme">
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="urlBarIconTheme">
        <item name="android:background">@drawable/url_button</item>
        <item name="tintColorList">@drawable/url_button_icon_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="headerButtonStyle">@style/headerButtonTheme</item>
        <item name="tabButtonStyle">@style/tabButtonTheme</item>
        <item name="dialogButtonStyle">@style/dialogButtonTheme</item>
        <item name="settingsButtonStyle">@style/settingsButtonTheme</item>
        <item name="tabStyle">@style/tabTheme</item>
        <item name="navigationBarStyle">@style/navigationBarTheme</item>
        <item name="navigationBarButtonStyle">@style/navigationBarButtonTheme</item>
        <item name="urlBarIconStyle">@style/urlBarIconTheme</item>
        <item name="urlProtocolColor">@color/fog_url_protocol</item>
        <item name="urlWebsiteColor">@color/fog</item>
    </style>

</resources>
