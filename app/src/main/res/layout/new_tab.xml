<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/void_color">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favicon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/ff_logo"
                android:layout_marginBottom="50dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bookmarks_list"
                    style="@style/customRecyclerViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadingEdgeLength="60dp"
                    android:requiresFadingEdge="vertical"
                    app:layoutManager="LinearLayoutManager" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bookmark_add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_icon_add"
                    android:tint="@color/library_panel_icon_color" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bookmark_add_view"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_gravity="center"
            android:background="@color/void_color">

            <EditText
                android:id="@+id/bookmarkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title" />

            <EditText
                android:id="@+id/bookmarkUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layoutDirection="rtl" >

            <com.igalia.wolvic.ui.views.UITextButton
                android:id="@+id/bookmark_add_cancel_button"
                style="@style/tabsButton"
                android:text="Cancel" />

            <com.igalia.wolvic.ui.views.UITextButton
                android:id="@+id/bookmark_add_button"
                style="@style/tabsButton"
                android:text="Add" />

        </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>