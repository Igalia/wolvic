<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="org.mozilla.vrbrowser.utils.StringUtils"/>
        <variable
            name="item"
            type="org.mozilla.vrbrowser.ui.adapters.Bookmark" />

        <variable
            name="callback"
            type="org.mozilla.vrbrowser.ui.callbacks.BookmarkItemFolderCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/library_item_row_height"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginEnd="20dp"
        app:leftMargin="@{item.level*100}"
        android:paddingStart="10dp"
        android:background="@drawable/library_item_background_color"
        android:onClick="@{(view) -> callback.onClick(view, item)}">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@{StringUtils.capitalize(item.title)}"
            android:textColor="@color/library_panel_folder_title_text_color"
            android:textSize="@dimen/library_item_title_text_size"
            android:textStyle="bold"
            tools:text="Item Title"
            android:duplicateParentState="true"
            android:drawableEnd="@{item.isExpanded ? @drawable/ic_baseline_arrow_drop_down_24px : @drawable/ic_baseline_arrow_drop_up_24px}"
            android:drawableTint="@color/fog"
            android:drawablePadding="10dp"/>
    </LinearLayout>
</layout>
